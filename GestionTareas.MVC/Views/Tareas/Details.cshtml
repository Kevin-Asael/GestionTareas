@model GestionTareas.Models.Tarea

@{
    ViewData["Title"] = "Detalles de Tarea";
}

<h1>Detalles de Tarea</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.titulo)</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.descripcion)</dd>

        <dt class="col-sm-2">Fecha de Creación</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fechaCreacion)</dd>

        <dt class="col-sm-2">Fecha de Vencimiento</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fechaVencimiento)</dd>

        <dt class="col-sm-2">Prioridad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.prioridad)</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.estado)</dd>

        <dt class="col-sm-2">Usuario Asignado</dt>
        <dd class="col-sm-10">@ViewBag.NombreUsuario</dd>

        <dt class="col-sm-2">Proyecto</dt>
        <dd class="col-sm-10">@ViewBag.NombreProyecto</dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
