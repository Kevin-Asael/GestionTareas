@model GestionTareas.Models.Seguimiento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Seguimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label">Descripción</label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label">Fecha</label>
                <input asp-for="fecha" type="date" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estadoAnterior" class="control-label">Estado Anterior</label>
                <select asp-for="estadoAnterior" asp-items="ViewBag.Estados" class="form-control">
                    <option value="">Seleccione un estado...</option>
                </select>
                <span asp-validation-for="estadoAnterior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estadoNuevo" class="control-label">Estado Nuevo</label>
                <select asp-for="estadoNuevo" asp-items="ViewBag.Estados" class="form-control">
                    <option value="">Seleccione un estado...</option>
                </select>
                <span asp-validation-for="estadoNuevo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tareaId" class="control-label">Tarea</label>
                <select asp-for="tareaId" asp-items="ViewBag.Tareas" class="form-control">
                    <option value="">Seleccione una tarea...</option>
                </select>
                <span asp-validation-for="tareaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usuarioId" class="control-label">Usuario</label>
                <select asp-for="usuarioId" asp-items="ViewBag.Usuarios" class="form-control">
                    <option value="">Seleccione un usuario...</option>
                </select>
                <span asp-validation-for="usuarioId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
